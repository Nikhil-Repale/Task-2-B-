FROM node:20-alpine AS builder
WORKDIR /app

# copy package only
COPY frontend/package.json ./
# install deps
RUN npm install --legacy-peer-deps

# ensure the older ajv that provides the missing file is present
RUN npm install ajv@6.12.6 --no-audit --no-fund --legacy-peer-deps

# copy source and build
COPY frontend/ ./
RUN npm run build

FROM nginx:alpine
RUN rm -rf /usr/share/nginx/html/*
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
